{
  "name": "tables-cms",
  "version": "1.0.0",
  "description": "Gatsby + React CMS for TABLES project",
  "main": "electron-main.js",
  "scripts": {
    "start": "npm run grabnodenpm && electron .",
    "grabnodenpm": "node electron-setup/bundle-node-npm.js",
    "dist": "npm run grabnodenpm && electron-builder"
  },
  "keywords": [
    "gatsby",
    "react",
    "cms"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ansi-to-html": "^0.7.2",
    "fs-extra": "^11.3.3",
    "node-bin-setup": "^1.1.4"
  },
  "devDependencies": {
    "@types/node": "^25.0.8",
    "electron": "^40.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.tables.cms",
    "productName": "TABLES CMS",
    "icon": "static/assets/tables-icon.png",
    "files": [
      "main-site/src",
      "main-site/static",
      "main-site/.env.development",
      "main-site/gatsby-*.js",
      "main-site/package.json",
      "electron-bin",
      "cms-site/src",
      "cms-site/static",
      "cms-site/gatsby-*.js",
      "cms-site/gatsby-*.json",
      "cms-site/package.json",
      "electron-*.html",
      "electron-*.js",
      "tsconfig.json"
    ],
    "extraResources": [
      {
        "from": "electron-bin",
        "to": "electron-bin",
        "filter": [
          "*"
        ]
      },
      {
        "from": "main-site",
        "to": "main-site",
        "filter": [
          "*"
        ]
      },
      {
        "from": "cms-site",
        "to": "cms-site",
        "filter": [
          "*"
        ]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "artifactName": "tables-cms-macos-${arch}.${ext}",
      "icon": "static/assets/tables-icon.png"
    },
    "win": {
      "target": "msi",
      "artifactName": "tables-cms-windows.${ext}",
      "icon": "static/assets/tables-icon.png"
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "tables-cms-linux.${ext}",
      "icon": "static/assets/tables-icon.png"
    }
  }
}
